/* 
* Computes future investment value at a given annual RoR for a specified number of years. 
*/

import java.util.Scanner;
public class CourseProject

{
	public static void main(String[] args)
	{
		Scanner input = new Scanner(System.in);
		System.out.print("Investment value:");
		double investment = in.nextDouble();
		System.out.println("Rate of interest:");
		double rate = in.nextDouble();
		System.out.print("Number of years:");
		int year = in.nextInt();

		rate *=1.0;

		System.out.println("Years InvestingValue");
		for(int i = 1; i <= year; i++)
	{
			int formatter = 30;
		if (i >= 10) formatter = 29;
		System.out.printf(i + "%"+formatter+".2f\n", futureInvestmentValue(investment, rate/12, i));
		}
	}
public static double futureInvestmentValue (double InvestAmount, double annualRoR, int years) 
/* Using method header as instructed */
	{
		return investmentAmount * Math.pow(1 + monthlyInterestRate, years * 12);
	}

}
